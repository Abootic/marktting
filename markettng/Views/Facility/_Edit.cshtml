                    {
                        <div id="current-ftype" class="col-4">
                            <label class="form-label"> @ftype.Name</label>
                            <input type="radio" value="@Model.obj.FacilityTypeDto.Id" name="FacilityTypeId" class="form-check-input" id="current-fTid">
                        </div>
