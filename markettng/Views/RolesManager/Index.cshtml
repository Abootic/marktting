@model CommonVm<RolesDto>
<div class="content-wrapper">
    <div class="card border-1 bg-card ">
        <div class="card-body">
            <h4 class="card-title">الصلاحيات</h4>

            <div class="dt-action-buttons text-end pt-3 pt-md-1">
                <div class="dt-buttons">
                    <button id="show-mmodel" type="button" class="btn btn-info" data-bs-toggle="offcanvas" data-bs-target="#offcanvasAdd">إضافة صلاحية</button>
                </div>
            </div>
            <div class="table-responsive" dir="rtl">
                @if (Model.data != null)
                {
                    <table class="table table-striped table-bordered mt-2">
                        <thead>
                            <tr>

                                <th class="th-heder">إسم الصلاحية </th>
                              
                                
                                <th class="th-heder">الاجرءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.data)
                            {
                                <tr>
                                    <td class="td-tbody">@item.Name</td>
                                    
                                  

                                    <td class="td-tbody">
                                        <div class="btn-group dropend">
                                            <span class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">  <i class="ai-dots-vertical"></i></span>
                                            <div class="dropdown-menu mx-1">
                                             @*   <a asp-action="Edit" class="dropdown-item">Edit </a>*@
                                              @*  <div class="dropdown-divider"></div>*@
                                                <a asp-action="Delete" class="dropdown-item">Delete  </a>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>

        </div>
    </div>
</div>

<partial name="_Add" />
<script type="module">
    //////////////// import the function

    import { post } from "../js/post.js";


    //////////////////// start post

    $(document).on("submit", "#rolesDto", (e) => {
        e.preventDefault();

        e.stopImmediatePropagation();
        post("../RolesManager/Add", "rolesDto", true, "../RolesManager/Index");


    });
            /////////////// end post
</script>




